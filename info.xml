<?xml version="1.0"?>
<extension key="de.systopia.promocodes" type="module">
  <file>promocodes</file>
  <name>PromoCodes</name>
  <description>Generates personalised, campaign codes to use in mailings.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>B. Endres</author>
    <email>endres@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/systopia/de.systopia.promocodes</url>
    <url desc="Documentation">https://github.com/systopia/de.systopia.promocodes</url>
    <url desc="Support">https://github.com/systopia/de.systopia.promocodes/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2023-10-30</releaseDate>
  <version>0.6.0</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.27</ver>
  </compatibility>
  <comments/>
  <civix>
    <namespace>CRM/Promocodes</namespace>
    <format>23.02.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
</extension>
